@model CustomerViewModel
@{
    ViewData["Title"] = "Register form";
}
<div class="container">
    <form asp-action="ConfirmationPage" asp-controller="Registration" method="post">
        <img src="../../img/AccountImage.png" asp-append-version="true">
        <div asp-validation-summary="All"></div>
        <div class="dws-input">
            <span asp-validation-for="EmailAddress"></span>
            <input asp-for="EmailAddress" placeholder="Введите почтовый адрес" />
            <span asp-validation-for="Password"></span>
            <input type="password" asp-for="Password" placeholder="Введите пароль" />
            <span asp-validation-for="FirstName"></span>
            <input asp-for="FirstName" placeholder="Введите Ваше имя" />
            <span asp-validation-for="LastName"></span>
            <input asp-for="LastName" placeholder="Введите Вашу фамилию" />
        </div>
        <input class="dws-submit" type="submit" value="Create new account">
        <br />
        <a asp-controller="Account" asp-action="Login">Уже есть аккаут?</a>
    </form>
</div>