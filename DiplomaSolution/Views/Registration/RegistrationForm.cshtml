@model IndexViewData
@{
    ViewData["Title"] = "Register form";
}
<div class="container">
    <form asp-action="ConfirmationPage" asp-controller="Registration" method="post">
        <div asp-validation-summary="All"></div>
        <div class="dws-input">
            <span asp-validation-for="Customer.EmailAddress"></span>
            <input asp-for="Customer.EmailAddress" placeholder="Введите почтовый адрес" />
            <span asp-validation-for="Customer.EmailAddress"></span>
            <input type="password" asp-for="Customer.Password" placeholder="Введите пароль" />
            <span asp-validation-for="Customer.EmailAddress"></span>
            <input asp-for="Customer.FirstName" placeholder="Введите Ваше имя" />
            <span asp-validation-for="Customer.EmailAddress"></span>
            <input asp-for="Customer.LastName" placeholder="Введите Вашу фамилию" />
        </div>
        <input class="dws-submit" type="submit" value="Create new account">
        <br />
        <a asp-controller="Account" asp-action="Login">Уже есть аккаут?</a>
    </form>
</div>